
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">


<body>
           <h2 style="text-align:center">Đăng Ký Thành Viên</h2>
        <table align="center">
            
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                <tr style="height:40px">
                    <td> Họ Tên Khách Hàng :</td>
                    <td>
                        @Html.TextBox("HotenKH")
                        @ViewData["Loi1"]
                    </td>
                </tr>
                <tr style="height:40px">
                    <td> Tên đăng nhập:</td>
                    <td>
                        @Html.TextBox("TenDN")
                        @ViewData["Loi2"]
                    </td>
                </tr>
                <tr style="height:40px">
                    <td> Mật Khâu:</td>
                    <td>
                        @Html.Password("MatKhau")
                        @ViewData["Loi3"]
                    </td>
                </tr>
                <tr style="height:40px">
                    <td> Mật Khâu nhập lại:</td>
                    <td>
                        @Html.Password("MatKhauNhapLai")
                        @ViewData["Loi4"]
                    </td>
                </tr>
                <tr style="height:40px">
                    <td> Email:</td>
                    <td>
                        @Html.TextBox("Email")

                    </td>
                </tr>
                <tr style="height:40px">
                    <td> Địa chỉ:</td>
                    <td>
                        @Html.TextBox("Diachi")

                    </td>
                </tr>
                <tr style="height:40px">
                    <td> Điện Thoại:</td>
                    <td>
                        @Html.TextBox("DienThoai")
                        @ViewData["Loi6"]
                    </td>
                </tr>
                <tr style="height:40px">
                    <td> Ngày Sinh:</td>
                    <td>
                        <input type="date" name="NgaySinh" />
                    </td>
                </tr>
                <tr style="height:40px">
                    <td></td>
                    <td>
                        <input type="submit" value="Đăng Ký" />
                    </td>
                </tr>
            }
        </table>


      

</body>
</html>